<%= notice %>
<br />
<h2>All Products</h2>

<main id="productsindex">
  <section class="imageholder">
    <% @products.each do |product| %>
      <div class='productlisting'>
        <div class="productimagecontainer">
          <p class="categoryname"><%= product.category.category_name %></p>
          <%= image_tag image_select(product), class:"smallproductimage" %>
        </div>
        <div class="productcardbody">
          <span class="productname"><%= link_to "#{product.product_name}", product %></span><br />
          $ <%= product.product_price / 100 %>
          
          <br />

          <span>
            <% if user_signed_in? && current_user.id == product.user_id %>
              <%= link_to 'Show', product %> | 
              <%= link_to 'Edit', edit_product_path(product) %> | 
              <%= link_to 'Delete Product', product, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </span>
        </div>
      </div>
    <% end %>
  </section>

  <br /><br /><br />

  <% if user_signed_in? %>
    <%= link_to 'Create a New Product', new_product_path %>
  <% end %>
</main>