<br/>
<h2>Sign up</h2>

<main>
  <%= form_with model: User.new do |form| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= form.label :fullname %><br />
      <%= form.text_field :fullname, autofocus: true %>
    </div>

    <div class="field">
      <%= form.label :username %><br />
      <%= form.text_field :username, autofocus: true %>
    </div>

    <div class="field">
      <%= form.label :email %><br />
      <%= form.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= form.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= form.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= form.label :password_confirmation %><br />
      <%= form.password_field :password_confirmation, autocomplete: "new-password" %>
    </div><br />

    <%= form.fields_for :address, @user.address do |addresses_form| %>
      <div class="field">
        <%= addresses_form.label :address_street %>
        <%= addresses_form.text_field :address_street, autofocus: true %>
      </div>
      <div class="field">
        <%= addresses_form.label :address_state %>
        <%= addresses_form.text_field :address_state, autofocus: true %>
      </div>
      <div class="field">
        <%= addresses_form.label :address_country %>
        <%= addresses_form.text_field :address_country, autofocus: true %>
      </div>
      <div class="field">
        <%= addresses_form.label :address_postcode %>
        <%= addresses_form.text_field :address_postcode, autofocus: true %>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :profile_info %>
      <%= form.text_field :profile_info, autofocus: true %>
    </div>

    <div class="actions">
      <%= form.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</main>