<br/>
<h2><%= @user.fullname %>'s Profile Edit</h2>

<main>
  <%= form_with model: @user, url: "/users", method: :patch do |form| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <h6>Profile</h6>

    <div class="form-inputs field">
      <%= form.label :fullname %>
      <%= form.text_field :fullname, autofocus: true %>
    </div>

    <div class="field">
      <%= form.label :username %>
      <%= form.text_field :username, autofocus: true %>
    </div>

    <div class="field">
      <%= form.label :email %>
      <%= form.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= form.label :profile_info %>
      <%= form.text_area :profile_info, autofocus: true %>
    </div>

    <br/>

    <h6>Password</h6>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= form.label :password %>
      <%= form.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
      <i>(leave blank if you don't want to change it)</i>
    </div>

    <div class="field">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= form.label :current_password %> 
      <%= form.password_field :current_password, autocomplete: "current-password" %><br/>
      <i>(we need your current password to confirm your changes)</i>
    </div>

    <br/>
    <h6>Address</h6>
    <div class="field">
      <%= form.label :street %>
      <%= form.text_field :address_street, autofocus: true %>
    </div>
    <div class="field">
      <%= form.label :state %>
      <%= form.text_field :address_state, autofocus: true %>
    </div>
    <div class="field">
      <%= form.label :country %>
      <%= form.text_field :address_country, autofocus: true %>
    </div>
    <div class="field">
      <%= form.label :postcode %>
      <%= form.text_field :address_postcode, autofocus: true %>
    </div>

    <div class="actions">
      <%= form.submit "Update" %>
    </div>
  <% end %>
  <%= link_to "Back to Home", :back %>
  <br/><br/><br/><br/>
  
  <h6>Unhappy? Cancel my account</h6>
  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>

  
</main>